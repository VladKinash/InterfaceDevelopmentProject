<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
    <title>Messages</title>
</head>
<%- include('partials/navbar_doctor.ejs') %>


<div class="container">
    <div class="row">
        <div class="col">
            <h1>Messages</h1>
        </div>
    </div>
    <div class="row">
        <div class="col">
            <div class="list-group">
                <% messages.forEach(message => { %>
                <div class="list-group-item">
                    <div class="d-flex w-100 justify-content-between">
                        <h5 class="mb-1"><%= message.name %></h5>
                        <small><%= new Date(message.createdAt).getDate() + '/' + (new Date(message.createdAt).getMonth() + 1) + '/' + new Date(message.createdAt).getFullYear() %></small>
                    </div>
                    <p class="mb-1"><%= message.email %></p>
                    <p class="mb-1"><%= message.text %></p>
                </div>
                <% }); %>
            </div>
        </div>
    </div>
</div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" crossorigin="anonymous"></script>
</body>

<style>
    .container{
        margin-top: 80px;
    }
</style>
</html>

